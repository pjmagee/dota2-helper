<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:design="clr-namespace:Dota2Helper.Design"
        xmlns:views="clr-namespace:Dota2Helper.Views"
        ClosingBehavior="OwnerWindowOnly"
        Closing="Window_OnClosing"
        mc:Ignorable="d"
        d:DesignHeight="600" d:DesignWidth="800"
        MinHeight="600" MinWidth="800"
        x:Class="Dota2Helper.Views.SettingsWindow"
        Icon="/Assets/d2helper.ico"
        SizeToContent="WidthAndHeight"
        Title="Dota2 Helper Settings">
    <Design.DataContext>
        <design:DesignSettingsViewModel />
    </Design.DataContext>
    <views:SettingsView />
</Window>