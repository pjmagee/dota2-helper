<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Dota2Helper.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="viewModels:SettingsViewModel"
             HorizontalContentAlignment="Stretch"
             x:Class="Dota2Helper.Controls.AboutTabContent">
    <StackPanel Orientation="Vertical" Spacing="5" HorizontalAlignment="Left">
        <TextBlock Margin="5" HorizontalAlignment="Left">
            This contains a list of all the framework libraries and 3rd party libraries used in the project.
        </TextBlock>
        <DataGrid ItemsSource="{Binding AboutItems}"
                  IsReadOnly="True" Margin="5"
                  HorizontalAlignment="Left"
                  MaxHeight="450" BorderThickness="1"
                  MaxColumnWidth="500"
                  CanUserResizeColumns="True" GridLinesVisibility="All"
                  HorizontalScrollBarVisibility="Visible"
                  AutoGenerateColumns="True" />
    </StackPanel>

</UserControl>