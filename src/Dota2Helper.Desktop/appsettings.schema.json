{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "SelectedProfileIdx": {
      "type": "integer",
      "description": "The index of the selected profile."
    },
    "Profiles": {
      "type": "array",
      "description": "The list of profiles.",
      "items": {
        "type": "object",
        "properties": {
          "Name": {
            "type": "string",
            "description": "The name of the profile."
          },
          "Timers": {
            "type": "array",
            "description": "The list of timers.",
            "items": {
              "$ref": "./timer.schema.json"
            }
          }
        },
        "required": [
          "Name",
          "Timers"
        ]
      }
    },
    "Volume": {
      "type": "integer",
      "description": "The volume level.",
      "minimum": 0,
      "maximum": 100,
      "default": 70
    },
    "Mode": {
      "type": "string",
      "description": "The mode of the application.",
      "enum": [
        "Auto",
        "Game",
        "Demo"
      ]
    },
    "DemoMuted": {
      "type": "boolean",
      "description": "Indicates if the demo audio is muted."
    },
    "Theme": {
      "type": "string",
      "description": "The theme of the application.",
      "enum": [
        "Dark",
        "Light",
        "Default"
      ]
    }
  }
}
