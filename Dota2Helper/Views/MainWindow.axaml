<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Dota2Helper.Views"
        mc:Ignorable="d"
        x:Class="Dota2Helper.Views.MainWindow" x:Name="Main" 
        Topmost="True" Icon="/Assets/dota2_helper.ico"
        ShowInTaskbar="True"
        WindowStartupLocation="Manual" 
        TransparencyLevelHint="AcrylicBlur"
        ExtendClientAreaChromeHints="SystemChrome" 
        CanResize="False"
        Title="D2 Helper" SizeToContent="WidthAndHeight">
    <Window.Styles>
            <Style Selector="ToggleButton PathIcon.audio-on">
                <Setter Property="IsVisible" Value="False"/>
            </Style>
            <Style Selector="ToggleButton:checked PathIcon.audio-on">
                <Setter Property="IsVisible" Value="True"/>
            </Style>
            <Style Selector="ToggleButton PathIcon.audio-mute">
                <Setter Property="IsVisible" Value="True"/>
            </Style>
            <Style Selector="ToggleButton:checked PathIcon.audio-mute">
                <Setter Property="IsVisible" Value="False"/>
            </Style>
        </Window.Styles>
    <views:MainView Exit="MainView_OnExit" />
</Window>
 