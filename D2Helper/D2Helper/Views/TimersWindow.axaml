<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:D2Helper.Views"
        xmlns:viewModels="clr-namespace:D2Helper.ViewModels"
        mc:Ignorable="d" d:DesignWidth="260" d:DesignHeight="250"
        x:Class="D2Helper.Views.TimersWindow"
        SizeToContent="WidthAndHeight"
        MinWidth="250"
        MinHeight="200"
        Width="260"
        Height="250"
        Icon="/Assets/avalonia-logo.ico"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="0"
        ExtendClientAreaToDecorationsHint="False"
        Opacity="0.65"
        Topmost="True"
        PointerMoved="InputElement_OnPointerMoved"
        PointerPressed="InputElement_OnPointerPressed"
        PointerReleased="InputElement_OnPointerReleased"
        SystemDecorations="BorderOnly"
        CornerRadius="15"
        Title="Timers">
        <Design.DataContext>
                <viewModels:DesignTimersViewModel />
        </Design.DataContext>
        <views:TimersView />
</Window>
